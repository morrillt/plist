-thumb= "http://img.youtube.com/vi/#{video.ytid}/2.jpg"
%li.video-item{:id=>"video_#{video.id}", :ytid=>"#{video.ytid}"}
  %a{:href=>"#", :class => 'play-item'}
    .thumb
      %img{:src=>"#{thumb}", :width=>60, :height=>45}
    %p.name= video.title
  - if user_signed_in?
    = render :partial => 'videos/actions', :locals => {:video => video}