= form_for(@user) do |f| 
  - if @user.errors.any? 
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved
      %ul
        - @user.errors.full_messages.each do |msg| 
          %li= msg
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :username
    %br
    = f.text_field :username
    
  .field
    = f.label :is_admin
    %br
    = f.check_box :is_admin
  .actions
    = f.submit
