= link_to "Create new Plist", new_user_playlist_path(@user), :class => 'create-playlist'

.recent-playlists
  %h2 
    Your playlists
    = @user.playlists.count
  - if @user.playlists.size > 0
    %ul
      = render :partial => 'playlists/playlist', :collection => @user.playlists
  - else
    No playlists found