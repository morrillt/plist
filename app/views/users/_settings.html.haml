.user-settings-form
  = form_for current_user, :url => user_path(current_user), :remote => true, :html => {:multipart => true, :id => 'user-settings-form'} do |f|
    %div
      %span Email
      = f.text_field :email
    %div
      %span Full name
      = f.text_field :name
    %div
      %span Username
      = f.text_field :username
    %div
      %span Avatar
      %br
      %span= image_tag(current_user.avatar.url(:thumb), :class => 'avatar-field') if current_user.avatar_file_name
      = f.file_field :avatar
