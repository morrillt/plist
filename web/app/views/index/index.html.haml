#root
  .top
    .wrapper-top
      #logo
        %h1
          %a{:href=>"/"} pList.tv
      .search
        %input{:type=>"text", :value=>"Search"}
        %a.search-btn{:href=>"#"} Go
      .account
        - if @member
          %a.member{:href=>"#"}
            %span.label You
            %span.icon
          .img{:style=>"width:20px;height:20px;background-color:white;float:right;"}
          .dropdown{:style=>"display:none;"}
            %a.settings{:href=>"#"} 
              %span.label Settings
            %a.logout{:href=>"#"} 
              %span.label Logout
        - else
          %a.sign-in{:href=>"#"} Sign In
          //%fb:login-button.fb-login{:autologoutlink=>"true", :perms => "email, user_location, user_birthday"}

  #content
    .wrapper-content
      .main
        .wrapper-main
          .header
            -if @playlist_member
              .member-thumb
                %img{:src=>"http://graph.facebook.com/#{@playlist_member.fb_uid}/picture"}
            .info
              %h1.plist-title #{@playlist.title}
              -if @editable
                .manage
                  -if @playlists.count > 1
                    %a.show{:href=>"#"} more
                  -if @playlist_member
                    %a.edit{:href=>"/#{@playlist_member.username}/#{@playlist.id}/edit"} edit
                  -else
                    %a.edit{:href=>"/playlist/#{@playlist.id}/edit"} edit
                  %a.add{:href=>"#"} add
              -else
                -if @playlists.count > 1
                  .manage
                    %a.show{:href=>"#"} more
              -if @playlist_member
                %p.by
                  %span.label by
                  %span
                    %a{:href=>"/#{@playlist_member.username}"} #{@playlist_member.fb_name}
                %p.created-at
                  %span.value #{@playlist_member.created_at.to_date.to_s(:long)}
              #playlists{:style=>"display:none;"}
                =render "playlists/list"
            -if @playlist_member
              .share{:style=>"float:right;"}
                .fb-like
                  %fb:like{:layout=>'button_count', :colorscheme=>'light', :show_faces=>'false', :send=>'true'}
                .twitter
                  %a{:href=>"http://twitter.com/share", :class=>"twitter-share-button", "data-count"=>"horizontal"} Tweet
                  %script{:type=>"text/javascript", :src=>"http://platform.twitter.com/widgets.js"}
          #player{:playlist => "#{@playlist._id}"}
            .wrapper-player
              .ytplayer{:style=>"background-color:black;width:940px;height:510px;float:left;margin-bottom:10px;"}
                #ytapiplayer
                  %p{:style=>"display:none;"} You need Flash player 8+ and JavaScript enabled to view this video.
              -if @editable
                #add-video
                  %input{:type=>"text", :width=>"400", :height=>"30px"}
                  %a.add-btn{:href=>"#"} Add
              #playlist{:style=>"display:none;"}
                =render "index/playlist"
          -if @playlist_member
            #comments
              %h2 Comments
              %fb:comments{:href=>"#{request.url}", :num_posts=>"2", :width=>"800"}
#fb-root
#ajax-loader{:style=>""}
  %p
    %span.loader
    %span.label Updating ...

=content_for(:facebook_meta) do
  -if @playlist_member
    %meta{:property=>"og:title", :content=>"#{@playlist.title}"}
    %meta{:property=>"og:type", :content=>"album"}
    %meta{:property=>"og:image", :content=>"#{@playlist.thumb}"}
    %meta{:property=>"og:url", :content=>"#{request.url}"}
    %meta{:property=>"fb:app_id", :content=>"133998703298878"}