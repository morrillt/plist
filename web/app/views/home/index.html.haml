#content.home
  .wrapper-content
    .main
      .wrapper-main
        %h1.about Watch, create and share video playlists with your friends!
        %a.create-playlist{:href=>"#"} Create your own playlist
        .recent-playlists
          %h2 Specials
          %ul
            - @featured.each_with_index do |pl, i|
              %li.video-item{:id=>"#{pl.id}", :pos => "#{i}"}
                %a{:href=>"/#{pl.member.username}/#{pl.id}"}
                  .thumb
                    %img{:src=>"#{pl.thumb}", :width=>60, :height=>45}
                  %p.name #{pl.title}
        .recent-playlists
          %h2 Recent Playlists
          %ul
            - @playlists.each do |t|
              - next if !t.member
              %li
                .thumb
                  %a{:href=>"/#{t.member.username}/#{t.id}"}
                    %img{:src=>"#{t.thumb}", :width=>"60", :height=>"45"}
                %a.title{:href=>"/#{t.member.username}/#{t.id}"} #{t.title}
                .member
                  .member-thumb
                    %img{:src=>"http://graph.facebook.com/#{t.member.fb_uid}/picture", :width=>"30", :height=>"30"}
                  %a.member-name{:href=>"/#{t.member.username}"} #{t.member.fb_name}
